{
    "manifest_version": 3,
    "name": "AI Writer Extension",
    "description": "This extension autocompletes text in text areas, corrects grammar and changes text tone",
    "version": "1.1.0",
    "permissions": [
        "activeTab",
        "contextMenus",
        "tabs",
        "windows",
        "identity",
        "declarativeContent",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>",
        "https://localhost:5000/",
        "https://www.google.com/",
        "https://accounts.google.com/gsi/client",
        "https://mail.google.com/*",
        "https://docs.google.com/*",
        "https://drive.google.com/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "https://mail.google.com/*",
                "https://docs.google.com/*",
                "https://drive.google.com/*"
            ],
            "js": [
                "scripts/script.js",
                "scripts/popup.js",
                "scripts/options.js"
            ]
        }
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "action": {
        "default_popup": "ui/options.html"
    },
    "web_accessible_resources": [{ 
        "resources": ["ui/options.html", "ui/popup.html"],
        "matches":["https://localhost:5000/*", "https://www.google.com/*", "<all_urls>"]
    }]
}
