{
    "manifest_version": 3,
    "name": "AI Writer Extension",
    "description": "This extension autocompletes text in text areas, corrects grammar and changes text tone",
    "version": "1.1.0",
    "oauth2": {
        "client_id": "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",
        "scopes": [
            "profile email",
            "https://accounts.google.com/gsi/client"
        ]
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "tabs",
        "windows",
        "identity",
        "declarativeContent",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://localhost:5000/",
        "https://www.google.com/",
        "https://accounts.google.com/gsi/client",
        "https://mail.google.com/*",
        "https://docs.google.com/*",
        "https://drive.google.com/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "https://mail.google.com/*",
                "https://docs.google.com/*",
                "https://drive.google.com/*"
            ],
            "js": [
                "scripts/content.js",
                "scripts/floating-button.js",
                "scripts/popup.js",
                "scripts/prompt.js"
            ],
            "css": [
                "ui/styles/floating-button.css"
            ]
        }
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "action": {
        "default_popup": "ui/prompt.html"
    }
}
